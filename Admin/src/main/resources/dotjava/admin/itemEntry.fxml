<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="dotjava.admin.controller.itemEntryController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox spacing="10.0" prefHeight="400.0" prefWidth="600.0">
        <HBox alignment="CENTER_LEFT">
            <Label text="Nama Item:" />
            <TextField fx:id="namaTextField" />
        </HBox>
        <HBox alignment="CENTER_LEFT">
            <Label text="Harga:" />
            <TextField fx:id="hargaTextField" />
        </HBox>
        <Label fx:id="errorLabel" text="" layoutX="14.0" layoutY="134.0" textFill="RED" visible="false"/>
        <HBox alignment="CENTER_RIGHT">
            <Button fx:id="tambahButton" text="Tambah Produk" />
            <Button fx:id="simpanButton" text="Simpan" />
        </HBox>
        <TableView fx:id="itemTableView" prefHeight="200.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="50.0" />
                <TableColumn fx:id="namaColumn" text="Nama" prefWidth="200.0" />
                <TableColumn fx:id="hargaColumn" text="Harga" prefWidth="100.0" />
            </columns>
        </TableView>
    </VBox>

</AnchorPane>
